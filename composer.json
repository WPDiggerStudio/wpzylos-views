{
  "name": "wpdiggerstudio/wpzylos-views",
  "description": "PHP template engine with optional Twig adapter for WPZylos framework",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "wordpress",
    "wpzylos",
    "views",
    "templates",
    "twig",
    "blade",
    "rendering"
  ],
  "homepage": "https://github.com/WPDiggerStudio/wpzylos-views",
  "authors": [
    {
      "name": "WPDiggerStudio",
      "email": "diggerwp@gmail.com",
      "homepage": "https://github.com/WPDiggerStudio",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/WPDiggerStudio/wpzylos-views/issues",
    "source": "https://github.com/WPDiggerStudio/wpzylos-views",
    "docs": "https://wpzylos.com/docs/latest/packages/wpzylos-views"
  },
  "require": {
    "php": "^8.0",
    "wpdiggerstudio/wpzylos-core": "^1.0",
    "wpdiggerstudio/wpzylos-i18n": "^1.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6 || ^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "twig/twig": "^3.0"
  },
  "suggest": {
    "twig/twig": "Required for Twig template engine support"
  },
  "autoload": {
    "psr-4": {
      "WPZylos\\Framework\\Views\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPZylos\\Framework\\Views\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyze",
    "cs": "phpcs --standard=PSR12 src",
    "cs-fix": "phpcbf --standard=PSR12 src",
    "qa": ["@cs", "@analyze", "@test"]
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.0.2"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "funding": [
    {
      "type": "paypal",
      "url": "https://www.paypal.com/donate/?hosted_button_id=66U4L3HG4TLCC"
    }
  ]
}